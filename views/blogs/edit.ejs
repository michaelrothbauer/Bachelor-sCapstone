<% include ../partials/header %>

<div class="container">
    <h1 class="authHeader">Edit <%= blog.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[name]" value="<%= blog.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[description]" value="<%= blog.description %>">
                </div>
                <div class="form-group">
                    <textarea class="input form-control" type="text" rows="5" cols="32" name="blog[article]" value="<%= blog.article %>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>    
</div>

<% include ../partials/footer %>
